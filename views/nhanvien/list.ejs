<%- include('../layouts/layout', { title: 'Danh sách Nhân Viên', body: `
  <h1 class="mb-4 text-primary">Danh sách Nhân Viên</h1>
  <a href="/nhanvien/create" class="btn btn-primary mb-4 btn-custom">Thêm Nhân Viên</a>
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-modern">
      <thead class="bg-secondary text-white">
        <tr>
          <th>Mã NV</th>
          <th>Họ Tên</th>
          <th>Ngày Sinh</th>
          <th>Địa Chỉ</th>
          <th>SĐT</th>
          <th>Email</th>
          <th>Chức Vụ</th>
          <th>Phòng Ban</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        ${nhanviens.map(nv => `
          <tr>
            <td>${nv.maNhanVien}</td>
            <td>${nv.hoTen}</td>
            <td>${new Date(nv.ngaySinh).toLocaleDateString()}</td>
            <td>${nv.diaChi}</td>
            <td>${nv.soDienThoai}</td>
            <td>${nv.email}</td>
            <td>${nv.chucVu}</td>
            <td>${nv.phongBan}</td>
            <td>
              <a href="/nhanvien/edit/${nv._id}" class="btn btn-secondary btn-sm btn-custom"><i class="fas fa-edit"></i></a>
              <a href="/nhanvien/delete/${nv._id}" class="btn btn-danger btn-sm btn-custom" onclick="return confirm('Bạn có chắc chắn xóa nhân viên ${nv.hoTen}?')"><i class="fas fa-trash"></i></a>
            </td>
          </tr>
        `).join('')}
      </tbody>
    </table>
  </div>
` }) %>
<%- include('../layouts/layout', { title: 'Chỉnh sửa Nhân Viên', body: `
  <h1 class="mb-4 text-primary">Chỉnh sửa Nhân Viên</h1>
  <div class="card shadow-sm p-4 rounded">
    <form action="/nhanvien/edit/${nhanVien._id}" method="POST">
      <div class="mb-3">
        <label for="maNhanVien" class="form-label fw-bold text-primary">Mã NV</label>
        <input type="text" class="form-control modern-input" id="maNhanVien" name="maNhanVien" value="${nhanVien.maNhanVien}" readonly>
      </div>
      <div class="mb-3">
        <label for="hoTen" class="form-label fw-bold text-primary">Họ Tên</label>
        <input type="text" class="form-control modern-input" id="hoTen" name="hoTen" value="${nhanVien.hoTen}" required>
      </div>
      <div class="mb-3">
        <label for="ngaySinh" class="form-label fw-bold text-primary">Ngày Sinh</label>
        <input type="date" class="form-control modern-input" id="ngaySinh" name="ngaySinh" value="${new Date(nhanVien.ngaySinh).toISOString().split('T')[0]}" required>
      </div>
      <div class="mb-3">
        <label for="diaChi" class="form-label fw-bold text-primary">Địa Chỉ</label>
        <input type="text" class="form-control modern-input" id="diaChi" name="diaChi" value="${nhanVien.diaChi}">
      </div>
      <div class="mb-3">
        <label for="soDienThoai" class="form-label fw-bold text-primary">SĐT</label>
        <input type="text" class="form-control modern-input" id="soDienThoai" name="soDienThoai" value="${nhanVien.soDienThoai}">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label fw-bold text-primary">Email</label>
        <input type="email" class="form-control modern-input" id="email" name="email" value="${nhanVien.email}" required>
      </div>
      <div class="mb-3">
        <label for="chucVu" class="form-label fw-bold text-primary">Chức Vụ</label>
        <input type="text" class="form-control modern-input" id="chucVu" name="chucVu" value="${nhanVien.chucVu}">
      </div>
      <div class="mb-3">
        <label for="phongBan" class="form-label fw-bold text-primary">Phòng Ban</label>
        <input type="text" class="form-control modern-input" id="phongBan" name="phongBan" value="${nhanVien.phongBan}">
      </div>
      <button type="submit" class="btn btn-primary btn-custom w-100">Cập nhật</button>
    </form>
  </div>
` }) %>
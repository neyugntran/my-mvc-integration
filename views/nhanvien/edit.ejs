<%- include('../layouts/layout', { title: 'Chỉnh sửa Nhân Viên', body: `
  <h1>Chỉnh sửa Nhân Viên</h1>
  <form action="/nhanvien/edit/${nhanVien._id}" method="POST">
    <div class="mb-3">
      <label for="hoTen" class="form-label">Họ Tên</label>
      <input type="text" class="form-control" id="hoTen" name="hoTen" value="${nhanVien.hoTen}" required>
    </div>
    <div class="mb-3">
      <label for="ngaySinh" class="form-label">Ngày Sinh</label>
      <input type="date" class="form-control" id="ngaySinh" name="ngaySinh" value="${new Date(nhanVien.ngaySinh).toISOString().split('T')[0]}" required>
    </div>
    <div class="mb-3">
      <label for="diaChi" class="form-label">Địa Chỉ</label>
      <input type="text" class="form-control" id="diaChi" name="diaChi" value="${nhanVien.diaChi}">
    </div>
    <div class="mb-3">
      <label for="soDienThoai" class="form-label">SĐT</label>
      <input type="text" class="form-control" id="soDienThoai" name="soDienThoai" value="${nhanVien.soDienThoai}">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="${nhanVien.email}" required>
    </div>
    <div class="mb-3">
      <label for="chucVu" class="form-label">Chức Vụ</label>
      <input type="text" class="form-control" id="chucVu" name="chucVu" value="${nhanVien.chucVu}">
    </div>
    <div class="mb-3">
      <label for="phongBan" class="form-label">Phòng Ban</label>
      <input type="text" class="form-control" id="phongBan" name="phongBan" value="${nhanVien.phongBan}">
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
  </form>
` }) %>
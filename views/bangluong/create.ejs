      <label for="ngayDiLam" class="form-label">Ngày Đi Làm</label>
      <input type="date" class="form-control" id="ngayDiLam" name="ngayDiLam" required>
    </div>
    <div class="mb-3">
      <label for="ngayNghi" class="form-label">Số Ngày Nghỉ</label>
      <input type="number" class="form-control" id="ngayNghi" name="ngayNghi" value="0">

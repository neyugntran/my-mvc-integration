<%- include('../layouts/layout', { title: 'Danh sách Bảng Lương', body: `
  <h1 class="mb-4 text-primary">Danh sách Bảng Lương</h1>
  <a href="/bangluong/create" class="btn btn-primary mb-4 btn-custom">Thêm Bảng Lương</a>
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-modern">
      <thead class="bg-secondary text-white">
        <tr>
          <th>Nhân Viên</th>
          <th>Ngày Đi Làm</th>
          <th>Số Ngày Nghỉ</th>
          <th>Mức Lương</th>
          <th>Bonus</th>
          <th>Phụ Cấp</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        ${bangluongs.map(bl => `
          <tr>
            <td>${bl.nhanVienId ? bl.nhanVienId.hoTen : ''}</td>
            <td>${new Date(bl.ngayDiLam).toLocaleDateString()}</td>
            <td>${bl.ngayNghi}</td>
            <td>${bl.mucLuong.toLocaleString()} đ</td>
            <td>${bl.bonus.toLocaleString()} đ</td>
            <td>${bl.phuCap.toLocaleString()} đ</td>
            <td>
              <a href="/bangluong/edit/${bl._id}" class="btn btn-secondary btn-sm btn-custom"><i class="fas fa-edit"></i></a>
              <a href="/bangluong/delete/${bl._id}" class="btn btn-danger btn-sm btn-custom" onclick="return confirm('Bạn có chắc chắn xóa?')"><i class="fas fa-trash"></i></a>
            </td>
          </tr>
        `).join('')}
      </tbody>
    </table>
  </div>
` }) %>